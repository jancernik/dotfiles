{{ if eq .chezmoi.hostname "arch-desktop" -}}
env = LIBVA_DRIVER_NAME,nvidia
env = __GLX_VENDOR_LIBRARY_NAME,nvidia
{{ else if eq .chezmoi.hostname "arch-laptop" -}}
env = AQ_DRM_DEVICES,/dev/dri/card1:/dev/dri/card0
{{- end -}}

env = ELECTRON_OZONE_PLATFORM_HINT,auto
env = NVD_BACKEND,direct
env = QT_QPA_PLATFORMTHEME=hyprqt6engine
env = QT_QPA_PLATFORMTHEME,qt6ct
env = QT_QPA_PLATFORM,wayland

exec = gsettings set org.gnome.desktop.interface color-scheme "prefer-dark"
exec = gsettings set org.gnome.desktop.interface gtk-theme "adw-gtk3-dark"
exec = gsettings set org.gnome.desktop.wm.preferences button-layout appmenu

env = XCURSOR_SIZE,24
env = HYPRCURSOR_SIZE,24
env = HYPRSHOT_DIR,/home/jan/Pictures/Screenshots
