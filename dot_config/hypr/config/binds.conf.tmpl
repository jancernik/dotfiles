$mainMod = SUPER
$mainModShift = $mainMod SHIFT

bind = $mainMod, Return, exec, $terminal
bind = $mainModShift, Return, exec, $ephemeral-terminal
bind = $mainMod, Space, exec, $menu
bind = $mainMod, E, exec, $files
bind = $mainMod, W, exec, $browser
bind = $mainMod, O, exec, $obsidian
bind = $mainMod, I, exec, hyprpicker --autocopy
bind = $mainModShift, W, exec, $whatsapp
bind = $mainModShift, L, exec, bash -c 'hyprctl dispatch focusmonitor $main_monitor; pidof gtklock || gtklock -d -f'
bind = $mainMod, V, exec, $clipboard
bind = $mainMod, code:60, exec, $emojis
bind = $mainMod, code:49, exec, ~/.scripts/monitor-backlight.sh
bind = $mainModShift, R, exec, bash -c '~/.scripts/autoreload.sh; killall gjs; ~/minishell/run.sh'
bind = $mainMod, F, fullscreen
bind = $mainMod, Q, killactive
bind = $mainMod, R, togglefloating
bind = $mainMod, P, pseudo
bind = $mainMod, J, togglesplit
bind = $mainModShift, M, exit

bindn = , Escape, exec, bash -c '[[ $(hyprctl activewindow -j | jq -r ".class") == "ephemeral-kitty" ]] && pypr hide ephemeral-kitty'

bindel = ,XF86AudioRaiseVolume, exec, wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+
bindel = ,XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindel = ,XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindel = ,XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

bindl = , switch:on:Lid Switch, exec, sh -c 'pidof gtklock >/dev/null || gtklock -d -f; systemctl suspend'

{{ if eq .chezmoi.hostname "arch-desktop" -}}
bindel = ,XF86MonBrightnessUp, exec, ~/.scripts/brightness.sh +10
bindel = ,XF86MonBrightnessDown, exec,  ~/.scripts/brightness.sh -10
{{ else if eq .chezmoi.hostname "arch-laptop" -}}
bindel = ,XF86MonBrightnessUp, exec, brightnessctl -n15 set 5%+
bindel = ,XF86MonBrightnessDown, exec, brightnessctl -n15 set 5%-
{{- end }}

bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPause, exec, playerctl play-pause
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous

bind = , PRINT, exec, hyprshot -m region
bind = CTRL, PRINT, exec, hyprshot -m output
bind = SHIFT, PRINT, exec, hyprshot -m window

# Workspaces
bind = $mainMod, 1, split-workspace, 1
bind = $mainMod, 2, split-workspace, 2
bind = $mainMod, 3, split-workspace, 3
bind = $mainMod, 4, split-workspace, 4
bind = $mainMod, 5, split-workspace, 5

bind = $mainMod SHIFT, 1, split-movetoworkspacesilent, 1
bind = $mainMod SHIFT, 2, split-movetoworkspacesilent, 2
bind = $mainMod SHIFT, 3, split-movetoworkspacesilent, 3
bind = $mainMod SHIFT, 4, split-movetoworkspacesilent, 4
bind = $mainMod SHIFT, 5, split-movetoworkspacesilent, 5

bind = $mainMod, mouse_down, split-cycleworkspaces, prev
bind = $mainMod, mouse_up, split-cycleworkspaces, next
gesture = 3, down, dispatcher, split-cycleworkspaces, prev
gesture = 3, up, dispatcher, split-cycleworkspaces, next

bindr = , mouse:275, togglespecialworkspace, magic
bind = $mainMod, S, togglespecialworkspace, magic
bind = $mainMod SHIFT, S, movetoworkspace, special:magic

# Windows
bind = $mainMod, left, movefocus, l
bind = $mainMod, right, movefocus, r
bind = $mainMod, up, movefocus, u
bind = $mainMod, down, movefocus, d

bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

binde = $mainMod ALT, left, resizeactive,-50 0
binde = $mainMod ALT, right, resizeactive,50 0
binde = $mainMod ALT, up, resizeactive,0 -50
binde = $mainMod ALT, down, resizeactive,0 50

bind = $mainMod SHIFT, left, movewindow, l
bind = $mainMod SHIFT, right, movewindow, r
bind = $mainMod SHIFT, up, movewindow, u
bind = $mainMod SHIFT, down, movewindow, d

bind = $mainMod CTRL, left, swapwindow,
bind = $mainMod CTRL, right, swapwindow, r
bind = $mainMod CTRL, up, swapwindow, u
bind = $mainMod CTRL, down, swapwindow, d
