{
  "layer": "top",
  "position": "top",
  "mod": "dock",  
{{- if eq .chezmoi.hostname "arch-desktop" }}
  "margin-left": 12,
  "margin-right": 12,
  "margin-top": 12,
{{- else if eq .chezmoi.hostname "arch-laptop" }}
  "margin-left": 6,
  "margin-right": 6,
  "margin-top": 6,
{{- end }}
  "spacing": 2,
  "margin-bottom": 0,
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "reload_style_on_change": true,
  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": ["wireplumber#source"],
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "visible": "",
      "default": "",
      "empty": ""
    },
    "all-outputs": false
  },
  "clock": {
    "format-alt": "{:%a, %d. %b  %H:%M}"
  },
  "wireplumber#source": {
      "node-type": "Audio/Source",
      "format": "{volume}% 󰍬",
      "format-muted": "󰍭",
      "on-click": "./scripts/audio_picker.sh --source",
      "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
      "scroll-step": 5,
  },
}
